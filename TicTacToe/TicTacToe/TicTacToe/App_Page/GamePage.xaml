                <Grid x:Name="ScoreGrid"
                      Grid.Column="1"
                      VerticalAlignment="Center">
                    <Grid.Resources>
                        <Storyboard x:Name="showScoreBoardAnimation">
                            <DoubleAnimation From="0"
